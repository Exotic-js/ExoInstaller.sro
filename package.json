{
  "name": "exoinstaller",
  "version": "1.0.0",
  "author": "Exotic",
  "copyright": "Â© 2026 Exotic. All Rights Reserved.",
  "description": "ExoInstaller - Game Installer & Manager",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.exo.installer",
    "productName": "ExoInstaller",
    "win": {
      "target": "nsis",
      "icon": "renderer/exoicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asarUnpack": "node_modules/7zip-bin"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "electron-log": "^5.0.0",
    "node-7z": "^3.0.0",
    "7zip-bin": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  }
}